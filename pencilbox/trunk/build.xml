	<!-- ソースコードアーカイブ作成 -->
	<target name="zip_src">
		<zip destfile="${project}-${version}-src.zip">
			<fileset dir="." includes="${src}/**/*"/>
			<fileset dir="." includes="build.xml"/>
			<fileset dir="." includes="${doc}/*"/>
			<fileset dir="." includes="${sample}/**/*"/>
		</zip>
	</target>

	<!-- 配布アーカイブ作成 -->
	<target name="zip_bin" depends="jar">
		<zip destfile="${project}-${version}.zip">
			<fileset dir="." includes="*.jar"/>
			<fileset dir="${jar}" includes="*.jar"/>
			<fileset dir="${doc}" includes="readme.txt, LICENSE.txt, index.html, history.html, pencilbox.html, style.css, pencilbox.bat"/>
			<fileset dir="." includes="${sample}/**/*"/>
		</zip>
	</target>

	<!-- javadoc作成 -->
	<target name="javadoc">
		<mkdir dir="${api}" />
		<javadoc packagenames="*" sourcepath="${src}" destdir="${api}">
		</javadoc>
	</target>

	<!-- 生成ファイル削除 -->
	<target name="clean">
		<delete dir="${jar}"/>
		<delete dir="${api}"/>
		<delete>
			<fileset dir="." includes="*.zip"/>
			<fileset dir="." includes="*.jar"/>
		</delete>
	</target>

</project>