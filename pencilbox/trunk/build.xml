	<property name="project" value="pencilbox" />
	<property name="version" value="1.6.3" />

	<!-- コンパイル -->
	<target name="compile">
		<mkdir dir="${bin}" />
		<javac srcdir="${src}" destdir="${bin}"/>
	</target>

